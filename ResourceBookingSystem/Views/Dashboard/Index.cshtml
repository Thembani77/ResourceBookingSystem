@model IEnumerable<ResourceBookingSystem.Models.Booking>

@{
    ViewData["Title"] = "Today's Bookings";
}

<h2 class="mb-3">Today's Bookings</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No bookings found for today.</div>
}
else
{
    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>Resource</th>
                <th>Booked By</th>
                <th>Purpose</th>
                <th>Start Time</th>
                <th>End Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Resource?.Name</td>
                    <td>@booking.BookedBy</td>
                    <td>@booking.Purpose</td>
                    <td>@booking.StartTime.ToString("g")</td>
                    <td>@booking.EndTime.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}
